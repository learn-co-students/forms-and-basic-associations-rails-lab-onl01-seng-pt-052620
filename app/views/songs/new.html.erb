<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_id, "Genre" %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: true) %>

  <p>Song Notes</p>
  <p>
  <%= f.text_field :notes_1 %>
  <br/>
  <%= f.text_field :notes_2 %>
  </p>

  <%= f.submit %>
<% end %>


