<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br><br>
  <%= f.label :genre_id, "Genre" %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: true) %>
  
  <p>Song Notes</p>
  <!-- 
  <p>
  <%= f.text_field :note_1, id: 'song_notes_1' %>
  <%= f.text_field :note_2, id: 'song_notes_2' %>
  </p> 
  -->

  <%= text_field_tag :'song[note_contents][]', @song.note_1, id: 'song_notes_1' %>
  <%= text_field_tag :'song[note_contents][]', @song.note_2, id: 'song_notes_2' %>

  <%= f.submit %>
<% end %>


